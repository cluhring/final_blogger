<%= form_for(@post, html: {multipart: true}) do |f| %>

	<ul>
		<% @post.errors.full_messages.each do |error| %>
		<li><%= error %></li>
	<% end %>
	</ul>
	<p>
		<%= f.label :title %><br>
		<%= f.text_field :title %>
	</p>
  <p>
    <%= f.label :body %><br>
    <%= f.text_area :body %>
  </p>
  <p>
    <%= f.label :author %><br>
    <%= f.text_field :author %>
  </p>
  <p>
    <%= f.label "Publish?" %><br>
    <%= check_box(:post, :status, {}, true)%>
  </p>
	<p>
		<%= f.label :image, "Attach an Image" %><br>
		<%= f.file_field :image %>
	</p>
	<p>
		<%= f.submit "Submit" %>
	</p>
	<% end %>
