<%= form_for(@post, html: {multipart: true}) do |f| %>

	<ul>
		<% @post.errors.full_messages.each do |error| %>
		<li><%= error %></li>
	<% end %>
	</ul>
	<p>
		<%= f.label :title %><br>
		<%= f.text_field :title %>
	</p>
  <p>
    <%= f.label :body %><br>
    <%= f.text_area :body %>
  </p>
  <p>
    <%= f.label :author %><br>
    <%= f.text_field :author %>
  </p>
	<p>
		<%= f.label :tags, "Tags", class: "col-sm-2 control-label" %>
		<%   @tags.each do |tag| %>
			<%=  f.label :tag_list, tag.name, class: "checkbox-inline" %>
			<%=  check_box(:tag_list, "tags", {:multiple => true}, tag.name, nil) %>
		<% end %>
	</p>
  <p>
    <%= f.label "Publish?" %><br>
    <%= check_box(:post, :status, {}, true)%>
  </p>
	<p>
		<%= f.label :image, "Attach an Image" %><br>
		<%= f.file_field :image %>
	</p>
	<p>
		<%= f.submit "Submit" %>
	</p>
	<% end %>
