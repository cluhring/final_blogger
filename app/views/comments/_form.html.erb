<%= form_for [@post, @comment], html: {multipart: true} do |f| %>
	<ul>
		<% @comment.errors.full_messages.each do |error| %>
		<li><%= error %></li>
	<% end %>
	</ul>
	<p>
		<%= f.label :body %><br>
		<%= f.text_area :body %>
	</p>
	<p>
		<%= f.label :author %><br>
		<%= f.text_field :author %>
	</p>
	<p>
		<%= f.submit value: "submit", id: "poop" %>
	</p>
	<% end %>
